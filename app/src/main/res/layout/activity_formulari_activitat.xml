<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/formulari_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/formulari_tipus_dactivitat"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Spinner
            android:id="@+id/formulari_spr_tipus_activitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight=".40"
            android:entries="@array/formulari_tipus_activitat"
            android:prompt="@string/formulari_seleccio_tipus_dactivitat"
            android:visibility="visible">
        </Spinner>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/formulari_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/formulari_check_AutoStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/formulari_check_AutoStart_tv"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="38dp"
                android:text="@string/formulari_check_autoStart"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/formulari_check_AutoStart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/formulari_time_autoStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/formulari_check_AutoStart"></TextView>

            <CheckBox
                android:id="@+id/formulari_check_AutoEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/formulari_time_autoStart" />

            <TextView
                android:id="@+id/formulari_check_AutoEnd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:text="@string/formulari_check_autoEnd"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/formulari_check_AutoEnd"
                app:layout_constraintTop_toBottomOf="@+id/formulari_time_autoStart" />

            <EditText
                android:id="@+id/formulari_time_autoEnd_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:text="@string/default_value_time"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/formulari_check_AutoEnd">
            </EditText>

            <TextView
                android:id="@+id/autoEnd_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/hour"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/formulari_time_autoEnd_hour"
                app:layout_constraintTop_toBottomOf="@+id/formulari_check_AutoEnd" />

            <EditText
                android:id="@+id/formulari_time_autoEnd_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:text="@string/default_value_time"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/formulari_time_autoEnd_hour">
            </EditText>

            <TextView
                android:id="@+id/autoEnd_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/min"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/formulari_time_autoEnd_min"
                app:layout_constraintTop_toBottomOf="@+id/formulari_time_autoEnd_hour" />

            <EditText
                android:id="@+id/formulari_time_autoEnd_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:text="@string/default_value_time"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/formulari_time_autoEnd_min">
            </EditText>

            <TextView
                android:id="@+id/autoEnd_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/sec"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/formulari_time_autoEnd_sec"
                app:layout_constraintTop_toBottomOf="@+id/formulari_time_autoEnd_min" />

        </android.support.constraint.ConstraintLayout>


        <TextView
            android:id="@+id/formulari_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/formulari_nom_activitat"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible" />

        <EditText
            android:id="@+id/formulari_nom_activitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/formulari_nom_activitat_hint"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:nextFocusForward="@+id/formulari_descripcio"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible" />

        <TextView
            android:id="@+id/formulari_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/formulari_descripcio"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible" />

        <EditText
            android:id="@+id/formulari_descripcio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/formulari_descripcio_hint"
            android:inputType="textMultiLine"
            android:lines="3"
            android:visibility="visible" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <Button
                android:id="@+id/formulari_btn_tornar"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight=".50"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="@string/formulari_boto_tornar_enrere"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/formulari_btn_crear"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight=".50"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="@string/formulari_boto_crear"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/formulari_btn_tornar"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</ScrollView>